{
    "className": "Lambda",
    "protocol": "TCP",
    "endianness": "BigEndian",
    "errorLimitUntilNotReachable": 30,
    "checkReachableRegister": "powerDemand",
    "enums": [
        {
            "name": "SystemStatus",
            "values": [
                {
                    "key": "Init",
                    "value": 0
                },
                {
                    "key": "Reference",
                    "value": 1
                },
                {
                    "key": "RestartBlock",
                    "value": 2
                },
                {
                    "key": "Ready",
                    "value": 3
                },
                {
                    "key": "StartPumps",
                    "value": 4
                },
                {
                    "key": "StartCompressor",
                    "value": 5
                },
                {
                    "key": "PreRegulation",
                    "value": 6
                },
                {
                    "key": "Regulation",
                    "value": 7
                },
                {
                    "key": "NotUsed",
                    "value": 8
                },
                {
                    "key": "Cooling",
                    "value": 9
                },
                {
                    "key": "Defrosting",
                    "value": 10
                }
            ]
        }
    ] // comma missing to enable manual written modbus files
    "blocks": [
        {
            "id": "power",
            "readSchedule": "update",
            "registers": [
                {
                    "id": "powerActual",
                    "address": 103,
                    "size": 1,
                    "type": "int16",
                    "registerType": "holdingRegister",
                    "readSchedule": "update",
                    "description": "actual power consumption of all configured heat pumps",
                    "defaultValue": "0",
                    "unit": "W",
                    "access": "RO"
                },
                {
                    "id": "powerSetpoint",
                    "address": 104,
                    "size": 1,
                    "type": "int16",
                    "registerType": "holdingRegister",
                    "readSchedule": "update",
                    "description": "realized power consumption setpoint of all configured heat pumps",
                    "defaultValue": "0",
                    "unit": "W",
                    "access": "RO"
                }
            ]
        },
        {
            "id": "lineTemp",
            "readSchedule": "update",
            "registers": [
                {
                    "id": "flowTemperature",
                    "address": 1004,
                    "size": 1,
                    "type": "int16",
                    "registerType": "holdingRegister",
                    "readSchedule": "update",
                    "description": "Flow",
                    "staticScaleFactor": -2,
                    "defaultValue": "0",
                    "unit": "°C",
                    "access": "RO"
                },
                {
                    "id": "returnTemperature",
                    "address": 1005,
                    "size": 1,
                    "type": "int16",
                    "registerType": "holdingRegister",
                    "readSchedule": "update",
                    "description": "Return",
                    "staticScaleFactor": -2,
                    "defaultValue": "0",
