            "access": "RW"
        },
        {
            "id": "systemStatus",
            "address": 1002,
            "size": 1,
            "type": "uint16",
            "enum": "SystemStatus",
            "registerType": "holdingRegister",
            "readSchedule": "update",
            "description": "System status",
            "defaultValue": "SystemStatusRegulation",
            "access": "RO"
        }       
    ]
}
